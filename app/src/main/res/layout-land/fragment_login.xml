<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginFragment"
        android:background="#F1B245">

    <EditText
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/rounded_edittext_register_main"
            android:ems="10"
            android:hint="@string/UserName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textEmailAddress|textVisiblePassword"
            android:importantForAutofill="no"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
                android:id="@+id/Password"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext_register_main"
                android:ems="10"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:autofillHints="no"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/Email"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:id="@+id/Login"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/Login"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/Password"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_google_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/Login"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/backToRegister"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="@string/goToRegister"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_google_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintVertical_bias="0.074"/>

</android.support.constraint.ConstraintLayout>