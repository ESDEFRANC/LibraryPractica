<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/FragmentTemplateRecyclercARDeLEVATION"
        app:cardCornerRadius="@dimen/Simple8DP"
        app:cardElevation="@dimen/FragmentTemplateRecyclercARDeLEVATION">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/bookCover"
                android:layout_width="@dimen/FragmentTemplateRecyclerImageViewLW"
                android:layout_height="@dimen/FragmentTemplateRecyclerImageViewLH"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/bookTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/FragmentTemplateRecyclercARDeLEVATION"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/FragmentTemplateRecyclerbookTitleTextSize"/>


    </LinearLayout>

</android.support.v7.widget.CardView>